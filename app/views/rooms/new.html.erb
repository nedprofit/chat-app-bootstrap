<div class="container mt-3">
  <h2>Create a New Chat Room</h2>
  <%= form_with(model: @room, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Room Name' %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Enter room name' %>
    </div>
    <% if params[:participant_id] %>
      <%= f.hidden_field :private, value: true %>
      <%= f.hidden_field :participant_id, value: params[:participant_id] %>
    <% else %>
      <%= f.hidden_field :private, value: false %>
    <% end %>
    <%= f.submit 'Create Room', class: 'btn btn-primary gy-3' %>
  <% end %>
</div>
